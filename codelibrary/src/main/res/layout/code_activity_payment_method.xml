<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/line"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tima.common.views.ActionBarView
        android:id="@+id/abv_type4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mode_title="收款方式"
        app:mode_type="type_three"
        app:mode_right_title="确认保存"
        app:mode_right_image="@mipmap/ic_cansle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:paddingLeft="40px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预留姓名"
            android:textSize="16sp"
            android:textColor="@color/text_black"/>

        <EditText
            android:id="@+id/ed_reserve_name"
            style="@style/weight_width_1"
            android:padding="15px"
            android:layout_marginLeft="20px"
            android:background="@null"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:text="请填写真实姓名"
        android:textColor="@color/text_gray"
        android:textSize="11sp"
        android:layout_marginTop="15px"
        android:layout_marginBottom="40px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:paddingLeft="40px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_payment_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_alipay_light"/>
        <TextView
            android:id="@+id/tv_payment_name"
            style="@style/weight_width_1"
            android:text="支付宝账户"
            android:layout_marginLeft="40px"
            android:textSize="16sp"
            android:textColor="@color/text_black"/>

        <TextView
            android:id="@+id/tv_payment_choose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="40px"
            android:text="请选择"
            android:background="@null"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:paddingLeft="40px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="16sp"
            android:textColor="@color/text_black"/>
        <EditText
            android:id="@+id/ed_input_code"
            style="@style/weight_width_1_Hmatch"
            android:hint="请输入验证码"
            android:layout_marginLeft="40px"
            android:background="@null"
            android:textSize="16sp"
            android:textColor="@color/text_black"/>

        <TextView
            android:id="@+id/tv_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            style="@style/padding_10_5_10_5"
            android:layout_marginRight="40px"
            android:text="获取验证码"
            android:background="@drawable/radius_white_solid_red"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统需要进行身份验证"
        android:layout_marginLeft="40px"
        android:layout_marginTop="15px"
        android:textSize="12sp"
        android:textColor="@color/text_gray"/>
</com.zhy.autolayout.AutoLinearLayout>