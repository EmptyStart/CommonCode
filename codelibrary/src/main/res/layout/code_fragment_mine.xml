<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="@color/code_title_barbc">

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="公司名称/HR名称"
            android:layout_alignParentBottom="true"
            android:layout_margin="40px"
            android:textSize="18sp"/>
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_below="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_resume"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_resume"/>
            <TextView
                style="@style/weight_width_1"
                android:layout_marginLeft="40px"
                android:textColor="@color/text_black"
                android:text="公司简介"
                android:textSize="14sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_back"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_wallet"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_wallet"/>
            <TextView
                style="@style/weight_width_1"
                android:layout_marginLeft="40px"
                android:textColor="@color/text_black"
                android:text="钱包"
                android:textSize="14sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_back"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_shell"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_shell"/>
            <TextView
                style="@style/weight_width_1"
                android:layout_marginLeft="40px"
                android:textColor="@color/text_black"
                android:text="公司认证营业执照/个人实名认证"
                android:textSize="14sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_back"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_help"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_help"/>
            <TextView
                style="@style/weight_width_1"
                android:layout_marginLeft="40px"
                android:textColor="@color/text_black"
                android:text="帮助与反馈"
                android:textSize="14sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_back"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/line"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_hotline"/>
            <TextView
                style="@style/weight_width_1"
                android:layout_marginLeft="40px"
                android:textColor="@color/text_black"
                android:text="在线客服"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="400-92929191"
                android:textSize="13sp"
                android:textColor="@color/xmpp_mian"/>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:layout_width="230px"
        android:layout_height="230px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80px"
        android:layout_marginTop="200px"
        android:src="@mipmap/code_register_addphoto"
        android:id="@+id/imageView" />
</RelativeLayout>