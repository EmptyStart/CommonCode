<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line">

    <com.xx.common.views.ActionBarView
        android:id="@+id/abv_type4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mode_title="提现"
        app:mode_type="type_three"
        app:mode_right_title="确认提现"
        app:mode_right_image="@mipmap/ic_cansle"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_alipay"
            style="@style/weight_width_1_Hmatch"
            android:background="@drawable/radius_white_solid_red"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_alipay_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_alipay_dark"/>
            <TextView
                android:id="@+id/tv_alipay_name"
                style="@style/weight_width_1"
                android:layout_marginLeft="20px"
                android:text="支付宝"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_alipay_update"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="40px"
                android:text="修改"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wechat"
            style="@style/weight_width_1_Hmatch"
            android:background="@drawable/radius_white_solid_gray"
            android:gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:paddingLeft="40px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_wechat_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_wechat"/>
            <TextView
                android:id="@+id/tv_wechat_name"
                android:layout_marginLeft="20px"
                style="@style/weight_width_1"
                android:text="微信"
                android:textColor="@color/text_black"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_wechat_update"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="40px"
                android:text="修改"
                android:textColor="@color/text_gray"
                android:textSize="13sp"/>
        </LinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现至支付宝"
            android:textColor="@color/text_black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:layout_marginTop="100px"/>
        
        <EditText
            android:id="@+id/ed_amount_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/code_title_barbc"
            android:inputType="number"
            android:textSize="18sp"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户余额"
                android:textColor="@color/text_black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_account_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="￥200"
                android:textColor="@color/text_black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_full_presentation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="全部提现"
                android:textColor="@color/code_title_barbc"
                android:textSize="16sp"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>