<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/code_registerbc_color">

    <com.tima.common.views.ActionBarView
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mode_right_title="确认发布"
        app:mode_title="发布全职"
        app:mode_type="type_three" />

    <ScrollView
        android:id="@+id/svCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_work_type"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginTop="2px"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="72px"
                    android:text="职位类型"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_right_point"
                    android:layout_width="15px"
                    android:layout_height="26px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45px"
                    android:src="@mipmap/code_register_point_right" />

                <TextView
                    android:id="@+id/tvWorkTyp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12px"
                    android:layout_toLeftOf="@+id/iv_right_point"
                    android:gravity="right"
                    android:text="请选择"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginTop="2px"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="72px"
                    android:text="职位名称"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_work"
                    android:layout_width="600px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="72px"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请填写"
                    android:singleLine="true"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginTop="2px"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="72px"
                    android:text="技能标签"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/tv_sign"
                    android:text="最多3个"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/et_introduce"
                    android:layout_width="600px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="72px"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请添加"
                    android:singleLine="true"
                    android:textSize="12sp" />
            </RelativeLayout>

            <include layout="@layout/code_layout_select_address" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260px"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_marginTop="30px"
                >

                <LinearLayout
                    android:id="@+id/ll_wages"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@mipmap/code_main_company_pre" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18px"
                        android:text="薪资范围"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_wages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12px"
                        android:hint="请选择"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="200px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/code_linebc" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_educat"
                    >

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@mipmap/code_main_company_pre" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18px"
                        android:text="最低学历"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_educat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12px"
                        android:hint="请选择"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="200px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/code_linebc" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/ll_work"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@mipmap/code_main_company_pre" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18px"
                        android:text="工作经验"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12px"
                        android:hint="请选择"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:background="@android:color/white"
                >

                <TextView
                    android:id="@+id/tv_work_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="140px"
                    android:layout_marginLeft="72px"
                    android:text="职位描述"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="26px"
                    android:layout_height="15px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="72px"
                    android:src="@mipmap/code_register_list_open"
                    android:layout_marginTop="62px"
                     />
                <EditText
                    android:id="@+id/et_work_desc"
                    android:layout_width="940px"
                    android:layout_height="wrap_content"
                    android:hint="请填写"
                    android:textSize="12sp"
                    android:background="@null"
                    android:layout_below="@+id/tv_work_desc"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:paddingBottom="10dp"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260px"
                android:layout_marginTop="30px"
                android:background="@android:color/white"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_interview_date"
                    >

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@mipmap/code_main_company_pre" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18px"
                        android:text="面试日期"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12px"
                        android:hint="请选择"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="200px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/code_linebc" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_interview_time">

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:src="@mipmap/code_main_company_pre" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18px"
                        android:text="面试时间"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_interview_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12px"
                        android:hint="请选择"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>


</com.zhy.autolayout.AutoLinearLayout>