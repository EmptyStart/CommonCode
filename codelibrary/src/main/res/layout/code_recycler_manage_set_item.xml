<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:background="@drawable/radius_white_solid_gray"
        android:layout_marginLeft="80px"
        android:layout_marginRight="40px"
        android:layout_marginTop="40px"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="15px"
            android:layout_marginLeft="120px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_manage_set_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/small_head_icon"/>
            <TextView
                android:id="@+id/tv_manage_set_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="张三"
                android:textSize="16sp"
                android:textColor="@color/text_black"/>
            <TextView
                android:id="@+id/tv_manage_set_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(IT人员)"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:layout_marginLeft="80px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginBottom="15px"
            android:layout_marginTop="25px"
            android:layout_marginRight="40px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_manage_set_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到场"
                android:textSize="11sp"
                style="@style/padding_15_5_15_5"
                android:textColor="@color/white"
                android:background="@drawable/radius_white_solid_red"/>
            <TextView
                android:id="@+id/tv_manage_set_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="未到场"
                android:textSize="11sp"
                style="@style/padding_15_5_15_5"
                android:textColor="@color/white"
                android:background="@drawable/radius_solid_black"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/iv_manage_set_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_marginLeft="20px"
        android:padding="20px"
        android:src="@mipmap/ic_total_check_dark"/>
</com.zhy.autolayout.AutoRelativeLayout>