<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line">

    <com.xx.common.views.ActionBarView
        android:id="@+id/abv_type4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mode_title="钱包"
        app:mode_type="type_three"
        app:mode_right_title="账户充值"
        app:mode_right_image="@mipmap/ic_cansle"/>


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/ll_stay_payment"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:layout_height="150px">

        <TextView
            android:id="@+id/tv_payment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:text="待付款"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_payment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_red_bg"
            android:textColor="@color/white"
            android:text="9"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="6px"
            android:paddingBottom="6px"
            android:paddingRight="20px"
            android:paddingLeft="20px"/>
    </com.zhy.autolayout.AutoRelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120px"
        android:src="@mipmap/ic_wallet_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:text="账户余额"
        android:textSize="20sp"
        android:textColor="@color/text_black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:text="￥"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/code_title_barbc"
            android:text="1000"
            android:textSize="46sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_withdraw_cash"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="150px"
        android:background="@drawable/radius_solid_black"
        android:text="提现"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginRight="200px"
        android:layout_marginLeft="200px"/>

    <TextView
        android:id="@+id/tv_account_recharge"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginTop="50px"
        android:background="@drawable/radius_white_solid_red"
        android:text="账户充值"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginRight="200px"
        android:layout_marginLeft="200px"/>

</com.zhy.autolayout.AutoLinearLayout>