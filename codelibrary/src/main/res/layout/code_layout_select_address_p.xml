<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginTop="30px"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="72px"
            android:text="工作地点"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省" />

            <ImageView
                android:id="@+id/iv_pro"
                android:layout_width="25px"
                android:layout_height="14px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="126px"
                android:src="@mipmap/code_register_list_close" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="市" />

            <ImageView
                android:id="@+id/iv_city"
                android:layout_width="25px"
                android:layout_height="14px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="126px"
                android:src="@mipmap/code_register_list_close" />

            <TextView
                android:id="@+id/tv_county"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="区" />

            <ImageView
                android:id="@+id/iv_county"
                android:layout_width="25px"
                android:layout_height="14px"
                android:layout_marginLeft="20px"
                android:src="@mipmap/code_register_list_close" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:layout_marginTop="2px"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57px"
            android:background="@null"
            android:hint="具体地址"
            android:textSize="12sp" />
    </LinearLayout>

    <com.amap.api.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="572px" />
</LinearLayout>